<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beautiful.beautiful.activity.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日爆款"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioGroup
            android:id="@+id/rg_detail"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rb_default"
                android:layout_weight="1"
                android:button="@null"
                android:text="默认"
                android:textColor="@drawable/rb_selected"
                android:checked="true"
                android:gravity="center"
                android:drawableRight="@drawable/rb_img_selected"
                android:drawablePadding="-35dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rb_sale"
                android:layout_weight="1"
                android:button="@null"
                android:text="销量"
                android:textColor="@drawable/rb_selected"
                android:gravity="center"
                android:drawableRight="@drawable/rb_img_selected"
                android:drawablePadding="-35dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/rb_update"
                android:layout_weight="1"
                android:button="@null"
                android:text="最新"
                android:textColor="@drawable/rb_selected"
                android:gravity="center"
                android:drawableRight="@drawable/rb_img_selected"
                android:drawablePadding="-35dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/rb_price"
                android:layout_weight="1"
                android:button="@null"
                android:text="价格"
                android:textColor="@drawable/rb_selected"
                android:gravity="center"
                android:drawableRight="@drawable/rb_img_selected"
                android:drawablePadding="-35dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RadioGroup>
    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"/>

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="占位页面"
        />

</LinearLayout>
